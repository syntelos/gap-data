<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">

  <display-name>@ProjectTarget@</display-name>

  <servlet>
    <servlet-name>Site</servlet-name>
    <servlet-class>ulsf.net.Site</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>SpaceNet</servlet-name>
    <servlet-class>spacenet.Site</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>Backend</servlet-name>
    <servlet-class>spacenet.backend.BackendServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>Template</servlet-name>
    <servlet-class>gap.hapax.TemplateServlet</servlet-class>
    <load-on-startup>-1</load-on-startup>
  </servlet>{{#servlet}}
  <servlet>
    <servlet-name>{{=name}}</servlet-name>
    <servlet-class>{{=class_name}}</servlet-class>
    <load-on-startup>{{=load_on}}</load-on-startup>
  </servlet>{{/servlet}}

  <servlet-mapping>
    <servlet-name>Site</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SpaceNet</servlet-name>
    <url-pattern>/spacenet/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Backend</servlet-name>
    <url-pattern>/spacenet/io/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Backend</servlet-name>
    <url-pattern>/_ah/start/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Backend</servlet-name>
    <url-pattern>/_ah/stop/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Template</servlet-name>
    <url-pattern>/templates/*</url-pattern>
  </servlet-mapping>{{#servlet}}
  <servlet-mapping>
    <servlet-name>{{=name}}</servlet-name>
    <url-pattern>{{=url_pattern}}</url-pattern>
  </servlet-mapping>{{/servlet}}


